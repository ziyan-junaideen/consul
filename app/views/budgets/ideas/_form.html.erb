<%= form_for(@investment, url: form_url, method: :post, html: { multipart: true, class: 'large-mobile-checkboxes' }) do |f| %>
  <%= render 'shared/errors', resource: @investment %>

  <div class="row">
    <div class="small-12 medium-8 column">
      <%= f.label :heading_id, t('budgets.ideas.form.heading_id') %>
      <p class="help-text" id="heading-id-help-text"><%= t("budgets.ideas.form.heading_id_help", link: link_to('here', 'https://council.nyc.gov/districts/', target: :_blank)).html_safe %></p>
      <%= f.select :heading_id, budget_heading_select_options(@budget), {include_blank: true, label: false} %>
    </div>

    <div class="small-12 column">
      <%= f.text_field :title, label: t('budgets.ideas.form.title'), maxlength: SpendingProposal.title_max_length, data: { js_suggest_result: "js_suggest_result", js_suggest: "#js-suggest", js_url: suggest_budget_investments_path(@budget) }%>
    </div>
    <div id="js-suggest"></div>

    <%= f.invisible_captcha :subtitle %>

    <div class="ckeditor small-12 column">
      <%= f.cktext_area :description, label: t('budgets.ideas.form.description'), maxlength: SpendingProposal.description_max_length, ckeditor: { language: I18n.locale } %>
    </div>

    <% if feature?(:map) %>
      <div class="small-12 column">

        <%= render 'map_locations/form_fields',
                   form:     f,
                   map_location: @investment.map_location || MapLocation.new,
                   label:    t("budgets.ideas.form.map_location"),
                   help:     t("budgets.ideas.form.map_location_instructions"),
                   remove_marker_label: t("budgets.ideas.form.map_remove_marker"),
                   parent_class: "budget_investment",
                   i18n_namespace: "budgets.ideas" %>

      </div>
    <% end %>

    <div class="small-12 column">
      <div id="category_tags" class="tags">
        <%= f.label :category_tag_list, t("budgets.ideas.form.tag_category_label") %>
        <p class="help-text" id="tags-list-help-text"><%= t("budgets.ideas.form.tags_instructions") %></p>
        <% @categories.each do |tag| %>
          <a class="js-add-tag-link"><%= tag.name %></a>
        <% end %>
      </div>

      <br>
      <%= f.text_field :tag_list, value: @investment.tag_list.to_s,
                        label: false,
                        placeholder: t("budgets.ideas.form.tags_placeholder"),
                        aria: {describedby: "tags-list-help-text"},
                        class: 'js-tag-list tag-autocomplete',
                        data: {js_url: suggest_tags_path} %>
    </div>

    <% unless current_user %>
      <div class="small-12 column">
        <%= f.fields_for :author do |author_fields| %>
          <%= author_fields.text_field :username, label: t("budgets.ideas.form.author.username") %>
          <p class="help-text" id="username-help-text"><%= t("budgets.ideas.form.author.username_help") %></p>

          <%= author_fields.email_field :email, label: t("budgets.ideas.form.author.email") %>
          <p class="help-text" id="username-help-text"><%= t("budgets.ideas.form.author.email_help") %></p>
        <% end %>
      </div>
    <% end %>

    <div class="small-12 column">
      <%= f.fields_for :author do |author_fields| %>
        <%= author_fields.label :setup_as_volunteer do %>
          <%= author_fields.check_box :setup_as_volunteer, label: false, checked: !author_fields.object.volunteer.nil? %>

          <span class="checkbox">
            <%= t("budgets.ideas.form.author.setup_as_volunteer") %>
          </span>
        <% end %>
      <% end %>
    </div>
    
    <% unless current_user&.manager? %>

      <div class="small-12 column">
        <%= f.label :terms_of_service do %>
          <%= f.check_box :terms_of_service, title: t('form.accept_terms_title'), label: false %>
          <span class="checkbox">
            <%= t("form.accept_terms",
                policy: link_to(t("form.policy"), "/privacy", target: "blank")).html_safe %>
          </span>
        <% end %>
      </div>

    <% end %>
    
    <div class="actions small-12 medium-6 large-4 end column">
      <%= f.submit(t("budgets.ideas.form.submit"), class: "button expanded") %>
    </div>
  </div>
<% end %>
