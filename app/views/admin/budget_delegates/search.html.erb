<h2><%= t("admin.budget_delegates.search.title") %></h2>

<%= render 'admin/shared/user_search', url: search_admin_budget_delegates_path %>

<div id="budget_delegates">
  <% if @users.any? %>
    <h3 class="margin"><%= page_entries_info @users %></h3>

    <table>
      <thead>
        <th scope="col"><%= t("admin.budget_delegates.index.name") %></th>
        <th scope="col"><%= t("admin.budget_delegates.index.email") %></th>
        <th scope="col" class="small-3"><%= t("admin.shared.actions") %></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td class="text-right">
              <% if user.budget_delegate? && user.budget_delegate.persisted? %>
                <%= link_to t('admin.budget_delegates.budget_delegate.delete'),
                            admin_budget_delegate_path(user),
                            method: :delete,
                            class: "button hollow alert expanded" %>
              <% else %>
                <%= link_to t('admin.budget_delegates.budget_delegate.add'),
                            { controller: "admin/budget_delegates",
                              action: :create,
                              user_id: user },
                            method: :post,
                            class: "button success expanded" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="callout alert margin">
      <%= t("admin.shared.no_search_results") %>
    </div>
  <% end %>
</div>
